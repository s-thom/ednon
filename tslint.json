{
  "extends": ["./node_modules/@sthom/linter-config/tslint.json"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "prefer-method-signature": false,
    "arrow-parens": {
      "severity": "warning"
    },
    "no-unsafe-any": false
  }
}
